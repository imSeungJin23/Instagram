<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryIn">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:scaleType="fitXY"
        android:src="@drawable/pro">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shop4" />

        <TextView
            android:id="@+id/storyIn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="seungjiin_"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/storyIn_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:text=" 12시간"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_more_horiz_24" />

        <ImageView
            android:id="@+id/storyIn_exit"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_clear_24" />


    </LinearLayout>

    <EditText
        android:id="@+id/storyIn_msg"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:hint="메세지 보내기"
        android:inputType="textPersonName"
        android:textColor="#F7FBFF"
        android:textColorHint="@color/white"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/storyIn_fav"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="54dp"
        android:src="@drawable/ic_baseline_favorite_border_24white">

    </ImageView>

</RelativeLayout>