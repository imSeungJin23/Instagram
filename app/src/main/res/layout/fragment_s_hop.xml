<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/shop_s"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:text="SHOP"
            android:textColor="#121313"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@+id/camera"
            android:src="@drawable/ic_outline_collections_bookmark_24" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_baseline_view_headline_24" />
    </RelativeLayout>

    <androidx.appcompat.widget.SearchView
        android:layout_margin="20dp"
        android:id="@+id/search_view"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:background="#E1E3E4" />

    <GridView
        android:stretchMode="columnWidth"
        android:id="@+id/shop_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:numColumns="2"
        />



</LinearLayout>