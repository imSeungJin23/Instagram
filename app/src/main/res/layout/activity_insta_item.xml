<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">




    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pro_img"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/pro"/>

        <LinearLayout
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nick_name"
                android:textColor="#030404"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="izky" />

            <TextView
                android:id="@+id/location"
                android:textColor="#AFB3B3"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="고양이집" />

        </LinearLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_more_horiz_24" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/content_img"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/pro" />
    </LinearLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/insta_heart"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/fav" />


            <ImageView
                android:id="@+id/chat_icon"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:focusableInTouchMode="true"
                android:src="@drawable/chat" />


            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dm" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_bookmark_border_24" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#030404"
                android:textStyle="bold"
                android:text="좋아요 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/favorNum"
                android:textColor="#030404"
                android:textStyle="bold"
                android:text="66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#030404"
                android:textStyle="bold"
                android:text="개"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nick_name2"
                android:textColor="#030404"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:text="izky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="츄르내놔" />
        </LinearLayout>
        <TextView
            android:text="댓글 모두 보기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textSize="12dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="       "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repl_id">
            </TextView>
            <TextView
                android:background="@null"
                android:textSize="11dp"
                android:id="@+id/insertText"
                android:text="             "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/repl_my_img"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/pro"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:layout_weight="3"
                android:id="@+id/edit_Text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="댓글입력..."
                android:textSize="12dp" />

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_rpl"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="댓글달기"
                android:textColor="#123"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textColor="#030404"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="10분전" />

    <View
        android:background="#6A6B6C"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />


</LinearLayout>